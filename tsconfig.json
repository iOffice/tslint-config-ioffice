{
  "compilerOptions": {
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "target": "es5",
    "declaration": true,
    "noEmit": false,
    "lib": ["es6"],
    "outDir": "./build"
  },
  "files": [
    "src/build-tools/tcbuilder.ts",
    "src/guide/index.ts",
    "src/readme/index.ts",
    "src/rules/index.ts",
    "src/test/index.ts",
    "src/tasks.ts",
    "src/util.ts"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
